<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:alertDialogTheme">@style/MyAlertDialogStyle</item>
    </style>

    <style name="MyAlertDialogStyle" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">@font/nanumsquarel</item>
        <item name="android:background">@color/maincolor</item>
    </style>

    <style name="CustomTextView" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/nanumsquarel</item>
    </style>

    <style name="CustomButton" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:fontFamily">@font/nanumsquarel</item>
    </style>
    <style name="CustomActionBar" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:fontFamily">@font/nanumsquarel</item>
    </style>

    <style name="Custom" parent="@android:style/Theme.Dialog">
        <item name="android:fontFamily">@font/nanumsquarel</item>
    </style>
</resources>
