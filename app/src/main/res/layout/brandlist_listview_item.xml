<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/brandlist_layout">
    
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="390dp"
        android:layout_height="90dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:background="#DEDEDE">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/brand_photo"
            android:src="@drawable/user_profile_default"/>

        <LinearLayout
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/brand_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="브랜드이름"/>

            <TextView
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/brand_info"
                android:text="안녕하세요. 이것은 열심히 쥐어 짜는 것입니다. 안녕하시죠???"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지역 : " />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/brand_areaname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서울시 노원구" />


                <TextView
                    android:paddingLeft="15dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격 : " />

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/brand_priceinfo_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80,000" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~" />

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/brand_priceinfo_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80,000" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
