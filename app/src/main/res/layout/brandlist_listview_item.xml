<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/user_profile_default"/>

        <LinearLayout
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="15dp"
                android:id="@+id/brand_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="브랜드이름"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/brand_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지역 : " />
                <TextView
                    android:id="@+id/brand_areaname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서울시 노원구" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/brand_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분야 : " />
                <TextView
                    android:id="@+id/brand_fieldname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요리/베이킹" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/brand_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격 : " />
                <TextView
                    android:id="@+id/brand_priceinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80,000~" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
