<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.ghd_t.myapplication.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <!-- TODO: 임시. ViewPager로 변경할 부분 -->

    <ImageView
        android:id="@+id/home_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_main" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <Button
            android:id="@+id/gps"
            android:layout_marginLeft="10dp"
            android:layout_width="105dp"
            android:layout_height="37dp"
            android:text="내 위치"
            android:background="@drawable/btn_maincolor"/>
        <Spinner
            android:layout_marginLeft="10dp"
            android:layout_gravity="right"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_field"
            android:spinnerMode="dropdown"
            android:background="@drawable/editbox"
            android:textColor="@color/black"/>
        <Spinner
            android:layout_marginLeft="10dp"
            android:layout_gravity="right"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_field2"
            android:spinnerMode="dropdown"
            android:background="@drawable/editbox"
            android:textColor="@color/black"/>

    </LinearLayout>

    <ListView
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_brandlist"
        android:divider="@color/white"
        android:dividerHeight="10dp" />
</LinearLayout>
