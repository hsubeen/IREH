<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.ghd_t.myapplication.RegClassFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/info_text"
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="클래스 추가를 위해 인증이 필요합니다."
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/brand_name_text"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/maincolor"
            android:text="브랜드 이름"
            android:textSize="16dp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <EditText
            android:fontFamily="@font/nanumsquarel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_brand_name"
            android:hint="브랜드 이름을 입력하세요."
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:maxLength="15"
            android:background="@drawable/editbox"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/brand_web_text"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            android:textColor="@color/maincolor"
            android:text="웹사이트"
            android:textSize="16dp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <EditText
            android:fontFamily="@font/nanumsquarel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_brand_web"
            android:textColorHint="@color/black"
            android:hint="웹사이트를 입력하세요."
            android:textSize="15dp"
            android:textColor="@color/black"
            android:maxLength="17"
            android:background="@drawable/editbox"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/phone_text"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            android:textColor="@color/maincolor"
            android:text="연락처"
            android:textSize="16dp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <EditText
            android:fontFamily="@font/nanumsquarel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_phone"
            android:textSize="15dp"
            android:inputType="phone"
            android:textColorHint="@color/black"
            android:hint="연락처를 입력해주세요."
            android:textColor="@color/black"
            android:maxLength="13"
            android:background="@drawable/editbox"
            android:padding="8dp"
            />


        <TextView
            android:id="@+id/field_text"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            android:textColor="@color/maincolor"
            android:text="분야"
            android:textSize="16dp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <Spinner
                android:fontFamily="@font/nanumsquarel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_field"
                android:spinnerMode="dropdown"
                android:background="@drawable/editbox"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/addr_text"
                android:layout_width="wrap_content"
                android:paddingTop="25dp"
                android:layout_height="wrap_content"
                android:textColor="@color/maincolor"
                android:text="주소"
                android:textSize="16dp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/edit_address"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/btn_maincolor"
                android:fontFamily="@font/nanumsquarel"
                android:text="주소 검색" />
        </LinearLayout>


        <TextView
            android:fontFamily="@font/nanumsquarel"
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="주소를 입력하세요."
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:maxLines="3"
            android:textSize="15dp"
            android:background="@drawable/editbox"
            android:padding="8dp"/>

        <Button
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanumsquarel"
            android:id="@+id/btn_send_class_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_maincolor"
            android:text="작성 완료"
            />
    </LinearLayout>
    

</LinearLayout>
